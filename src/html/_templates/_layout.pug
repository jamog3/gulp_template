//- 変数初期設定
- var head = {}
- var filePath = "/"

//- 変数読み込み
block vars

//- デフォルト設定
- var site         = {}
- site.title       = "site title"
- site.keywords    = "keyword"
- site.description = "description"
- site.url         = "http://hoge.com"

if !head.keywords
  - head.keywords    = site.keywords
if !head.description
  - head.description = site.description

doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="format-detection", content="telephone=no, address=no, email=no")

    if !head.title
      title #{site.title}
    else
      title #{head.title}｜#{site.title}

    meta(name="keywords", content=`${head.keywords}`)
    meta(name="description", content=`${head.description}`)

    //- facebook
    if !head.title
      meta(property="og:title", content=`${site.title}`)
    else
      meta(property="og:title", content=`${head.title}｜${site.title}`)

    meta(property="og:description", content=`${head.description}`)
    meta(property="og:url", content=`${site.url}${filePath}`)
    meta(property="og:locale", content="ja_JP")

    if filePath === "/"
      meta(property="og:type", content="website")
    else
      meta(property="og:type", content="article")

    meta(property="og:image", content="")
    meta(property="og:site_name", content="")

    //- twitter
    meta(name="twitter:card", content="summary")
    meta(name="twitter:site", content="@twitter")
    meta(property="twitter:account_id", content="00000000000")

    link(rel="stylesheet", href="./stylesheets/style.css")
    link(rel="icon", type="image/png", href="/favicon.png", sizes="32x32")

  body
    .wrap
      h1.title h1タイトル

    include /_templates/_head

    block content

    script(src="./javascripts/common.js")

